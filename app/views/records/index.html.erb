<p id="notice"><%= notice %></p>

<h1>赚分记录</h1>
<br>

<h2>目前总分: <strong><%=@total_score%></strong> </h2>

<table>
  <thead>
    <tr>
      <th>记录时间</th>
      <th>活动</th>
      <th>分数</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= record.course.des %></td>
        <td><%= record.course.score %></td>
        <!--<td><%= link_to 'Show', record %></td>-->
        <td><%= link_to '编辑', edit_record_path(record) %></td>
        <td><%= link_to '删除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

