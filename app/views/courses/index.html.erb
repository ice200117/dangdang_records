<p id="notice"><%= notice %></p>

<h1>当当的活动</h1>

<table class="">
  <thead>
    <tr>
      <th>活动内容</th>
      <th>分数</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.des %></td>
        <td><%= course.score %></td>
        <!--<td><%= link_to 'Show', course %></td>-->
        <td><%= link_to '编辑', edit_course_path(course) %></td>
        <td><%= link_to '删除', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加活动类型', new_course_path, class: "ui button" %>
